# Uncomment this line to define a global platform for your project

target 'WeatherFrog for OSX' do
    platform :osx, '10.11'

    pod 'AFNetworking'
    pod 'CorePlot'
    pod 'CocoaLumberjack'
    pod 'Fabric'
    pod 'Crashlytics'

end

target 'WeatherFrog for iOS' do
    platform :ios, '9.0'

    pod 'AFNetworking'
    pod 'AFNetworking/UIKit'
    pod 'CorePlot'
    pod 'CocoaLumberjack'
    pod 'Fabric'
    pod 'Crashlytics'
    
end


target 'WeatherToday' do
    platform :ios, '9.0'

    pod 'AFNetworking'
    pod 'AFNetworking/UIKit'
    pod 'CorePlot'
    pod 'CocoaLumberjack'
    pod 'Fabric'
